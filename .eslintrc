{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true,
        "jasmine": true
    },
    "ecmaFeatures": {
        "jsx": true
    },
    "rules": {
        // Strict mode
        "strict": [
            2,
            "never"
        ],
        // allow console
        "no-console": 0,
        "no-underscore-dangle": 0,
        "semi-spacing": 0,
        // Code style
        "indent": 0,
        "quotes": 1
    }
}
